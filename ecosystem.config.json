{
  "name": "svms-backend",
  "script": "src/server.ts",
  "interpreter": "ts-node",
  "env": {
    "NODE_ENV": "production",
    "PORT": "5000"
  },
  "instances": 1,
  "exec_mode": "cluster",
  "watch": false,
  "ignore_watch": ["node_modules", "logs"],
  "log_file": "./logs/pm2.log",
  "out_file": "./logs/pm2-out.log",
  "error_file": "./logs/pm2-error.log",
  "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
  "restart_delay": 4000,
  "max_restarts": 10,
  "min_uptime": "10s"
}
