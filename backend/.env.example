NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/svms

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-long-and-complex
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production-make-it-even-longer
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# File Upload
UPLOAD_PATH=uploads/

# Email Configuration (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@svms.com

# SMS Configuration (Optional - for notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890
